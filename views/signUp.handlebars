    <main  class=" has-background-grey-light">

      <header class="has-text-centered block">
        <h2 class="title is 3">Sign-Up</h2>
      </header>
      <form class="columns signUp-form">
        <div class="column">
          <div class="field is-horizontal">
            <div class="field-label is-normal">
              <label class="label">Your Info</label>
            </div>
            <div class="field-body">
              <div class="field">
                <p class="control is-expanded has-icons-left">
